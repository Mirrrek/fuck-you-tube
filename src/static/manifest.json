{
    "manifest_version": 3,
    "name": "FuckYouTube",
    "description": "Block ads on YouTube without detection.",
    "version": "1.0.0",
    "action": {
        "default_icon": {
            "16": "images/logo-16.png",
            "24": "images/logo-24.png",
            "32": "images/logo-32.png"
        }
    },
    "icons": {
        "16": "images/logo-16.png",
        "32": "images/logo-32.png",
        "48": "images/logo-48.png",
        "128": "images/logo-128.png"
    },
    "permissions": [
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "*://youtube.com/*",
        "*://www.youtube.com/*",
        "*://googleads.g.doubleclick.net/pagead/id"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "pagead-id-blocker",
                "enabled": true,
                "path": "pagead-id-blocker.json"
            }
        ]
    }
}
